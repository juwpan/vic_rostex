<div class="container">
  <div class="m-1">
    <div class="row">
      <div class=".col-12">
        <div class="card p-3 <%= bg_color_cycle_warrning %>">
          <p class="text-center"><%= @question.body %></p>
        </div>
        <div>
          <%= form_with url: check_answer_questions_path, method: :post, local: true, id: "answer-form" do |form| %>
            <% @question_answer_rand.each do |key, value| %>
              <div class="mt-2 mb-2">
                <div class="form-check">
                  <input type="radio" name="selected_answer" id="answer_<%= key %>" value="<%= value %>" class="btn-check" autocomplete="off">
                  <label for="answer_<%= key %>" class="btn btn-outline-dark text-left">
                    <p class="mb-0"><%= value %></p>
                  </label>
                </div>
              </div>
            <% end %>

            <div class="text-center">
              <%= form.submit "Отправить ответ", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="">
    <p class="text-center"><%= link_to "Back", "/", class: "btn btn-primary" %></p>
  </div>
</div>

